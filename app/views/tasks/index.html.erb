<h1> My Tasks </h1>

<ul>
  <% @tasks.each do |task| %>
    <div class="d-flex p-2 m-1 ">
      <input class="form-check-input" type="checkbox" <%= task.completed ? "checked" : "" %>>

      <%= link_to task.title, task_path(task) %>

      <% delete_message = "Delete " + task.title + "?" %>

      <%= link_to destroy_path(task),
          data: {turbo_method: :delete, turbo_confirm: delete_message } do
      %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>

    </div>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
